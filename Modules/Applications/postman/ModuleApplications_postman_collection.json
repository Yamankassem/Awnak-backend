{
  "info": {
    "name": "Applications API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Applications",
      "item": [
        {
          "name": "GET /applications",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/applications?per_page=15"
          }
        },
        {
          "name": "POST /applications",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"opportunity_id\":1,\"volunteer_id\":1,\"coordinator_id\":1,\"description\":\"Application\",\"status\":\"pending\"}"
            },
            "url": "{{base_url}}/applications"
          }
        },
        {
          "name": "PATCH /applications/{id}/status",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"status\":\"approved\"}"
            },
            "url": "{{base_url}}/applications/1/status"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "GET /tasks",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{base_url}}/tasks?per_page=15"
          }
        },
        {
          "name": "POST /tasks",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"application_id\":1,\"title\":\"Task\",\"description\":\"Description\",\"status\":\"active\",\"due_date\":\"2024-12-31\"}"
            },
            "url": "{{base_url}}/tasks"
          }
        },
        {
          "name": "POST /tasks/{id}/log-hours",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"hours\":5,\"started_date\":\"2024-01-15\",\"ended_date\":\"2024-01-15\",\"note\":\"Work\"}"
            },
            "url": "{{base_url}}/tasks/1/log-hours"
          }
        }
      ]
    },
    {
      "name": "Feedbacks",
      "item": [
        {
          "name": "POST /feedbacks",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"task_id\":1,\"name_of_org\":\"Org\",\"name_of_vol\":\"Volunteer\",\"rating\":4,\"comment\":\"Good\"}"
            },
            "url": "{{base_url}}/feedbacks"
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:8000/api/v1"},
    {"key": "token", "value": "YOUR_TOKEN"}
  ]
}